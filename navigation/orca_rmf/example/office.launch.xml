<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time"    default="false"/>
  <arg name="failover_mode"   default="false"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share orca_rmf)/example/common.launch.xml">
    <arg name="use_sim_time"          value="$(var use_sim_time)"/>
    <arg name="viz_config_file"       value="$(find-pkg-share orca_rmf)/rviz/office/office.rviz"/>
    <arg name="config_file"           value="$(find-pkg-share orca_rmf)/config/office/office.building.yaml"/>
    <arg name="dashboard_config_file" value="$(find-pkg-share orca_rmf)/config/office/dashboard_config.json"/>
  </include>

  <!-- TinyRobot fleet adapter and robot state aggregator needed for the TinyRobot slotcar_plugin -->
  <group>
    <let name="fleet_name"        value="tinyRobot"/>
    <include file="$(find-pkg-share orca_rmf)/example/tinyRobot_adapter.launch.xml">
      <arg name="fleet_name"      value="$(var fleet_name)"/>
      <arg name="use_sim_time"    value="$(var use_sim_time)"/>
      <arg name="nav_graph_file"  value="$(find-pkg-share orca_rmf)/config/office/nav_graphs/0.yaml" />
    </include>
    <include file="$(find-pkg-share orca_rmf)/example/robot_state_aggregator.launch.xml">
      <arg name="robot_prefix"    value="tinyRobot"/>
      <arg name="fleet_name"      value="$(var fleet_name)"/>
      <arg name="use_sim_time"    value="$(var use_sim_time)"/>
      <arg name="failover_mode"   value="$(var failover_mode)"/>
    </include>
  </group>

</launch>